<Window x:Class="Guarden0.Connect_Device"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guarden0"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Title="" Background="#FFE4E4E4" Height="250" Width="350">

    <StackPanel Margin="60,0,60,0" Grid.IsSharedSizeScope="True" VerticalAlignment="Center" Height="123">
        <TextBlock Text ="Connect Device" FontSize="20" Foreground="Black" Width="138" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <TextBlock Text="Device IP:" Width="85" FontSize="18" />
            <TextBox Width="127" Height="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <TextBlock Text="Username:" Width="85" FontSize="18" />
            <TextBox Width="127" Height="20"/>

        </StackPanel>
        <Button Content="Connect" Width="75" Margin="0,10,0,0" />
    </StackPanel>

</Window>
